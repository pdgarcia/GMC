{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.1",
  "options_page": "options.html",
  "icons": { "16":  "img/icon16.png",
             "48":  "img/icon48.png",
             "128": "img/icon128.png" },
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "alarms",
    "background",
    "http://rkamv1175.kau.roche.com/mstats/*",
    "http://localhost/"
  ],
  "browser_action": {
    "default_icon": "img/icon_gray.png",
    "default_popup": "popup.html"
  },
  "default_locale": "en"
}
